[user]
        name = Amit Anand (Office)
        email = amit.a@tradeindia.com
[color]
        branch = auto
        diff = auto 
        status = auto
[color "branch"]
        current = red reverse
        local = blue
        remote = green
[color "diff"]
        meta = yellow
        frag = magenta
        old = red bold
        new = green
        plain = white
[color "status"]
        added = green
        changed = red
        untracked = blue
[gitreview]
        username = amitanand
[diff]
        tool = vimdiff
        mnemonicprefix = true
[alias]
        unstage = reset HEAD --
        last = log -1 HEAD
        s = status 
        st = status -s
        co = checkout
        br = branch
        r = reset
        ci = commit
        ca = commit --amend
        gr = grep -Ii
        cl = clone
        cp = cherry-pick

        # grep on filename
        f = "!git ls-files | grep -i"

        # log commands {{{
        ls = log --pretty=format:"%C(green)%h\\ %C(yellow)[%ad]%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=relative
        ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
        #lc  = "!f() { git ll "$1"^.."$1"; }; f"
        lnc = log --pretty=format:"%h\\ %s\\ [%cn]"
        fl = log -u
        filelog = log -u
        # }}}

        # diff {{{
        d = diff --word-diff
        dc = diff --cached
        # diff last commit
        dlc = diff --cached HEAD^
        dr  = "!f() { git diff -w "$1"^.."$1"; }; f"
        diffr  = "!f() { git diff "$1"^.."$1"; }; f"
        # }}}

        # reset commands {{{
        r1 = reset HEAD^
        r2 = reset HEAD^^
        rh = reset --hard
        rh1 = reset HEAD^ --hard
        rh2 = reset HEAD^^ --hard
        # }}}

        # stash {{{
        sl = stash list
        sa = stash apply
        ss = stash save
        # }}}

        # list all aliases
        la = "!git config -l | grep alias | cut -c 7-"
        ignore = update-index --assume-unchanged
        unignore = update-index --no-assume-unchanged 
        ignored =!git ls-files -v | grep "^[[:lower:]]" 

[merge]
        conflictstyle = diff3
[advice]
	statusHints = true
[core]
	excludesfile = 
